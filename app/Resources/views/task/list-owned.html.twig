{% extends 'base.html.twig' %}

{% block title %}Mes Besoins{% endblock %}

{% block body %}

	<h1>{{ block('title') }}</h1>

	<div class="row">

		<div class="col-lg-12">
			<p>
				<a class="btn btn-default" href="{{ path('task_new') }}">
					Poster un nouveau Besoin
				</a>
			</p>
		</div>

		<section class="col-md-6">
			<h2>Besoins actifs</h2>

			{% for task in tasks_enabled %}

				<div class="panel panel-default">
					<div class="panel-heading">
						<a href="{{ path('task_edit', {'id': task.id}) }}">{{ task.title }}</a>
					</div>
					<div class="panel-body">
						<p>{{ task.location }}</p>
						<p>{{ task.description }}</p>
					</div>
				</div>

			{% endfor %}
		</section>

		<section class="col-md-6">
			<h2>Besoins désactivés</h2>

			{% for task in tasks_disabled %}

				<div class="panel panel-default">
					<div class="panel-heading">
						{{ task.title }} - <a href="{{ path('task_open', {'id': task.id}) }}">Ré-activer</a>
					</div>
					<div class="panel-body">
						<p>{{ task.location }}</p>
						<p>{{ task.description }}</p>
					</div>
				</div>

			{% endfor %}
		</section>

	</div>

{% endblock %}
