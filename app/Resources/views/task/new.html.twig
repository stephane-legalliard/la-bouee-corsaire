{% extends 'base.html.twig' %}

{% block stylesheets %}

	{{ parent() }}

	{% stylesheets filter="scssphp" output="css/profile.css" combine=true
		"scss/profile.scss"
	%}
		<link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
	{% endstylesheets %}

{% endblock %}

{% block title %}Nouveau Besoin{% endblock %}

{% block body %}

	{{ form_start(form, {'method': 'POST'}) }}

		<div class="row">

			<div class="col-md-6 col-md-offset-3 toppad">

				<div class="panel panel-info">

					<div class="panel-heading">
						<h1 class="panel-title text-center">{{ block('title') }}</h1>
						{{ form_errors(form.title) }}
						{{ form_errors(form.location) }}
						{{ form_errors(form.level) }}
						{{ form_errors(form.description) }}
					</div>

					<div class="panel-body">
						<div class="row">
							<div class="col-md-3" align="center">
								<img alt="avatar" src="{{ asset('images/task.png') }}"
								 class="avatar img-responsive">
							</div>
							<div class="col-md-9">
								<table class="table table-user-information">
									<tbody>
										<tr>
											<td>{{ form_label(form.title) }}</td>
											<td>
												{{ form_widget(form.title, {'attr': {
													'class': 'form-control'
												}}) }}
											</td>
										</tr>
										<tr>
											<td>{{ form_label(form.location) }}</td>
											<td>
												{{ form_widget(form.location, {'attr': {
													'class': 'form-control'
												}}) }}
											</td>
										</tr>
										<tr>
											<td>{{ form_label(form.level) }}</td>
											<td>
												{{ form_widget(form.level, {'attr': {
													'class': 'form-control'
												}}) }}
											</td>
										</tr>
										<tr>
											<td>{{ form_label(form.description) }}</td>
											<td>
												{{ form_widget(form.description, {'attr': {
													'class': 'form-control'
												}}) }}
											</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>

					<div class="panel-footer">
						<button type="submit" class="btn btn-default">
							Publier un nouveau Besoin
						</button>
					</div>

				</div>
			</div>
		</div>

	{{ form_end(form) }}

{% endblock %}
