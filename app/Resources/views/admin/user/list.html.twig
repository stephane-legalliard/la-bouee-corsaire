{% extends 'base.html.twig' %}

{% block title %}Administration - Utilisateurs{% endblock %}

{% block body %}

	<h1>{{ block('title') }}</h1>

	<div class="row">

		{% for user in users %}

			<div class='col-lg-3 col-md-4 col-sm-6'>
				<a href="{{ path('admin_user_show', {'id': user.id}) }}">
					<div class='panel panel-default'>
						<div class="panel-heading">{{ user.username }}</div>
						<div class="panel-body">
							<p>{{ user.name }} {{ user.surname }}</p>
							<p>{{ user.region }} - {{ user.city }}</p>
							<p>Crédit : {{ user.hours }}h</p>
						</div>
					</div>
				</a>
			</div>

		{% endfor %}

	</div>

	<a href="{{ path('admin_home') }}">Retour au panneau d’administration</a>

{% endblock %}
