{% trans_default_domain 'FOSUserBundle' %}

{% extends 'default/form.html.twig' %}

{% block title %}
	Édition du profil Utilisateur
{% endblock %}

{% block form %}

	{{ form_start(form, {'method': 'post', 'action': path('fos_user_profile_edit'), 'attr': {
		'class': 'fos_user_profile_edit'
	}}) }}

		<div class="form-box">

			<div class="form-top">
				<div class="form-top-left">
					<h3>{{ user.username }}</h3>
					<p>
						Éditez les informations vous concernant :
					</p>
				</div>
				<div class="form-top-right">
					<i class="fa fa-pencil"></i>
				</div>
			</div>

			<div class="form-bottom">

				<div class="form-group">
					{{ form_label(form.email, null) }}
					{{ form_errors(form.email) }}
					{{ form_widget(form.email, {'attr': {
						'class': 'form-control',
						'placeholder': form.email.vars.label
					}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.name, null) }}
					{{ form_errors(form.name) }}
					{{ form_widget(form.name, {'attr': {
						'class': 'form-control',
						'placeholder': form.name.vars.label
					}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.surname, null) }}
					{{ form_errors(form.surname) }}
					{{ form_widget(form.surname, {'attr': {
						'class': 'form-control',
						'placeholder': form.surname.vars.label
					}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.adress, null) }}
					{{ form_errors(form.adress) }}
					{{ form_widget(form.adress, {'attr': {
						'class': 'form-control',
						'placeholder': form.adress.vars.label
					}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.region, null) }}
					{{ form_errors(form.region) }}
					{{ form_widget(form.region, {'attr': {
						'class': 'form-control',
						'placeholder': form.region.vars.label
					}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.city, null) }}
					{{ form_errors(form.city) }}
					{{ form_widget(form.city, {'attr': {
						'class': 'form-control',
						'placeholder': form.city.vars.label
					}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.phone, null) }}
					{{ form_errors(form.phone) }}
					{{ form_widget(form.phone, {'attr': {
						'class': 'form-control',
						'placeholder': form.phone.vars.label
					}}) }}
				</div>

				<button type="submit" class="btn">
					{{ 'profile.edit.submit'|trans }}
				</button>

			</div>

		</div>

	{{ form_end(form) }}

{% endblock %}
