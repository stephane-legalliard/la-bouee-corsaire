{% trans_default_domain 'FOSUserBundle' %}

{% extends 'base.html.twig' %}

{% block stylesheets %}

	{{ parent() }}

	{% stylesheets filter="scssphp" output="css/profile.css" combine=true
		"scss/profile.scss"
	%}
		<link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
	{% endstylesheets %}

{% endblock %}

{% block title %}Mon profil - Ã‰dition{% endblock %}

{% block body %}

	{{ form_start(form, {'method': 'post', 'action': path('fos_user_profile_edit'), 'attr': {
		'class': 'fos_user_profile_edit'
	}}) }}

		<div class="row">

			<div class="col-md-6 col-md-offset-3 toppad">

				<div class="panel panel-info fos_user_user_show">

					<div class="panel-heading">
						<h1 class="panel-title text-center">{{ user.username | upper}} </h1>
						{{ form_errors(form.email) }}
						{{ form_errors(form.name) }}
						{{ form_errors(form.surname) }}
						{{ form_errors(form.adress) }}
					</div>

					<div class="panel-body">
						<div class="row">
							<div class="col-md-3" align="center">
								<img alt="avatar" src="/images/man.png"
								 class="avatar img-circle img-responsive">
							</div>
							<div class="col-md-9">
								<table class="table table-user-information">
									<tbody>
										<tr>
											<td>{{ form_label(form.email) }}</td>
											<td>
												{{ form_widget(form.email, {'attr': {
													'class': 'form-control'
												}}) }}
											</td>
										</tr>
										<tr>
											<td>{{ form_label(form.name) }}</td>
											<td>
												{{ form_widget(form.name, {'attr': {
													'class': 'form-control'
												}}) }}
											</td>
										</tr>
										<tr>
											<td>{{ form_label(form.surname) }}</td>
											<td>
												{{ form_widget(form.surname, {'attr': {
													'class': 'form-control'
												}}) }}
											</td>
										</tr>
										<tr>
											<td>{{ form_label(form.adress) }}</td>
											<td>
												{{ form_widget(form.adress, {'attr': {
													'class': 'form-control'
												}}) }}
											</td>
										</tr>
										<tr>
											<td>{{ form_label(form.region) }}</td>
											<td>
												{{ form_widget(form.region, {'attr': {
													'class': 'form-control'
												}}) }}
											</td>
										</tr>
										<tr>
											<td>{{ form_label(form.city) }}</td>
											<td>
												{{ form_widget(form.city, {'attr': {
													'class': 'form-control'
												}}) }}
											</td>
										</tr>
										<tr>
											<td>{{ form_label(form.phone) }}</td>
											<td>
												{{ form_widget(form.phone, {'attr': {
													'class': 'form-control'
												}}) }}
											</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>

					<div class="panel-footer">
						<button type="submit" class="btn btn-default">
							{{ 'profile.edit.submit'|trans }}
						</button>
					</div>

				</div>
			</div>
		</div>

	{{ form_end(form) }}

{% endblock %}
