{% extends "base.html.twig" %}

{% block stylesheets %}

	{{ parent() }}

	{% stylesheets filter="scssphp" output="css/profile.css" combine=true
		"scss/profile.scss"
	%}
	<link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
	{% endstylesheets %}

{% endblock %}

{% block title %}Mon profil{% endblock %}

{% block body %}

	<div class="row">

		<div class="col-md-6 col-md-offset-3 toppad">

			<div class="panel panel-info fos_user_user_show">

				<div class="panel-heading">
					<h1 class="panel-title text-center">{{ user.username | upper}}</h1>
				</div>

				<div class="panel-body">
					<div class="row">
						<div class="col-md-3" align="center">
							<img alt="avatar" src="../../../../images/man.png"
							 class="avatar img-circle img-responsive">
							<a href="/profile/edit" data-original-title="Edition du profil"
							 data-toggle="tooltip" type="button" class="btn btn-md btn-warning">
								<i class="glyphicon glyphicon-edit"></i>
								Édition
							</a>
						</div>
						<div class="col-md-9">
							<table class="table table-user-information">
								<tbody>
									<tr>
										<td><label>Adresse e-mail</label></td>
										<td>{{ user.email }}</td>
									</tr>
									<tr>
										<td><label>Prénom</label></td>
										<td>{{ user.name }}</td>
									</tr>
									<tr>
										<td><label>Nom</label></td>
										<td>{{ user.surname }}</td>
									</tr>
									<tr>
										<td><label>Adresse</label></td>
										<td>{{ user.adress }}</td>
									</tr>
									<tr>
										<td><label>Région</label></td>
										<td>{{ user.region }}</td>
									</tr>
									<tr>
										<td><label>Ville</label></td>
										<td>{{ user.city }}</td>
									</tr>
									<tr>
										<td><label>Téléphone</label></td>
										<td>{{ user.phone }}</td>
									</tr>
									<tr>
										<td><label>Solde</label></td>
										<td>{{ user.hours }}h</td>
									</tr>
									<tr>
										<td><label>Dernière connexion</label></td>
										<td>{{ user.lastLogin|localizeddate() }}</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>

				<div class="panel-footer">
					<a href="/task/list-owned" class="btn btn-default">Mes Besoins</a>
					<a href="/transaction/list" class="btn btn-default">Mes Transactions</a>
					<span class="pull-right">
						<a href="/logout" data-original-title="Deconnexion"
						 data-toggle="tooltip" type="button" class="btn btn-info btn-md">
							<i class="glyphicon glyphicon-log-out"></i>
							Déconnexion
						</a>
					</span>
				</div>

			</div>
		</div>
	</div>

{% endblock body %}
